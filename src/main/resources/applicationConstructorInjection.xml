<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <!-- I want this specific class to be managed by Spring Container and provide object of it whenever needed bruh -->
    <bean id="carSpecification" class="car.example.constructor.injection.Specification">  <!-- id is identifier of the bean, and class represents the location of the bean  -->
        <property name="make" value="Toyota"/>
        <property name="model" value="Corolla"/>
    </bean>

    <!-- this bean need carSpecification as the dependency -->
    <bean id = "myCar" class = "car.example.constructor.injection.Car">
        <constructor-arg ref = "carSpecification"/>

    </bean>

</beans>